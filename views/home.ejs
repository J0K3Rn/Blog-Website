<%- include("partials/header") -%>

<h1>Home</h1>

<p><%= content %></p>



<% posts.forEach(function (element) {  %>
<div class="">
    <h1><%= element.title %></h1>
    <% if( element.body.length > 100 ) { %>
    <p>
        <%=element.body.substring(0,100) + "..." %>
        <a href="/posts/<%=element.postID%>">Read More</a>
    </p>
    <% } else { %>
    <p>
        <%=element.body %>
        <!-- <a href="/posts/<%=element.postID%>">Read More</a> -->
    </p>
    <% }  %>

</div>
<% }); %>

<%- include("partials/footer") -%>