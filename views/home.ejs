<%- include("partials/header") -%>

<h1>Home</h1>

<p><%= content %></p>

<% posts.forEach(function (element) {  %>
<div class="">
    <h1><%= element.postTitle %></h1>
    <% if( element.postBody.length > 100 ) { %>
    <p>
        <%=element.postBody.substring(0,100) + "..." %>
        <a href="/posts/<%=element._id%>">Read More</a>
    </p>
    <% } else { %>
    <p>
        <%=element.postBody %>
        <!-- <a href="/posts/<%=element._id%>">Read More</a> -->
    </p>
    <% }  %>

</div>
<% }); %>

<%- include("partials/footer") -%>